{
  "name": "@camaro/eslint-config",
  "version": "3.5.2",
  "description": "A shareable eslint config.",
  "main": "lib/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc -b",
    "cspell": "cspell -no-must-find-files --config ./eng/cspell.config.json  --quiet .",
    "commitlint": "commitlint --config ./eng/.commitlintrc.json --edit",
    "eslint": "eslint --config ./eng/eslint.config.js .",
    "lint": "npm run cspell && npm run eslint",
    "lint:staged": "lint-staged --config ./eng/.lintstagedrc.json",
    "prepare": "husky || true",
    "test": "TSX_TSCONFIG_PATH=./test/tsconfig.json tsx ./test/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/camarojs/eslint-config.git"
  },
  "keywords": [
    "camaro",
    "eslint"
  ],
  "author": "Dunn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/camarojs/eslint-config/issues"
  },
  "homepage": "https://github.com/camarojs/eslint-config#readme",
  "dependencies": {
    "@eslint/js": "^9.39.1",
    "@stylistic/eslint-plugin": "^5.5.0"
  },
  "devDependencies": {
    "@camaro/eslint-config": "^3.5.1",
    "@camaro/tsconfig": "^1.2.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^24.10.0",
    "cspell": "^9.3.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  },
  "peerDependencies": {
    "eslint": ">=9.0.0",
    "typescript-eslint": ">=8.0.0"
  },
  "peerDependenciesMeta": {
    "typescript-eslint": {
      "optional": true
    }
  }
}
